generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

type HighlightsHighlights {
  comment  HighlightsHighlightsComment
  content  HighlightsHighlightsContent
  id       String
  position HighlightsHighlightsPosition
}

type HighlightsHighlightsComment {
  emoji String
  text  String
}

type HighlightsHighlightsContent {
  image String
  text  String
}

type HighlightsHighlightsPosition {
  boundingRect HighlightsHighlightsPositionBoundingRect
  pageNumber   Int
  rects        HighlightsHighlightsPositionRects[]
}

type HighlightsHighlightsPositionBoundingRect {
  height     Float
  pageNumber Int
  width      Float
  x1         Float
  x2         Float
  y1         Float
  y2         Float
}

type HighlightsHighlightsPositionRects {
  height     Float
  pageNumber Int
  width      Float
  x1         Float
  x2         Float
  y1         Float
  y2         Float
}

model highlights {
  id         String                 @id @default(auto()) @map("_id") @db.ObjectId
  highlights HighlightsHighlights[]
  source     String
  userId     String?
}

model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  first_name String
  followers  String[]
  follows    String[]
  last_name  String
}
