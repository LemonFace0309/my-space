generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

type AnnotatedPdfHighlights {
  comments  AnnotatedPdfHighlightsComments[]
  content   AnnotatedPdfHighlightsContent
  id        String
  position  AnnotatedPdfHighlightsPosition
  timestamp DateTime                         @db.Date
}

type AnnotatedPdfHighlightsComments {
  emoji     String
  text      String
  timestamp DateTime @db.Date
  userId    String
}

type AnnotatedPdfHighlightsContent {
  image String?
  text  String?
}

type AnnotatedPdfHighlightsPosition {
  boundingRect AnnotatedPdfHighlightsPositionBoundingRect
  pageNumber   Int
  rects        AnnotatedPdfHighlightsPositionRects[]
}

type AnnotatedPdfHighlightsPositionBoundingRect {
  height     Float
  pageNumber Int
  width      Float
  x1         Float
  x2         Float
  y1         Float
  y2         Float
}

type AnnotatedPdfHighlightsPositionRects {
  height     Float
  pageNumber Int
  width      Float
  x1         Float
  x2         Float
  y1         Float
  y2         Float
}

model AnnotatedPdf {
  id         String                   @id @default(auto()) @map("_id") @db.ObjectId
  highlights AnnotatedPdfHighlights[]
  source     String
  userId     String
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  first_name String
  followers  String[]
  follows    String[]
  handle     String
  last_name  String
}
